<div class="container p-4">
    <div class="row">
        <div class="col-12 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h5 class="text-center mb-4">Registra un nuevo producto</h5>
                    <form action="/productos/add" method="POST">
                        <div class="form-group">
                            <input type="text" maxlength="50" class="form-control" required name="nombre_producto" placeholder="Nombre del producto" autofocus/>
                        </div>
                        <div class="form-group">
                            <textarea name="description" maxlength="150" rows="2" required class="form-control" placeholder="DescripciÃ³n del producto"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="number" step="0.01" max="100000.00" min="0.00" class="form-control" required name="costo" placeholder="Costo del producto"/>
                        </div>
                        <div class="form-group">
                            <input type="number" step="1" max="100000" min="0" class="form-control" required name="stock" placeholder="Cantidad en stock"/>
                        </div>
                        
                        <div class="form-group">
                            <input type="file" name="imagen" required>
                        </div>
                        
                        <div class="form-group">
                            <button class="btn btn-info">
                                Registrar producto
                            </button>
                            <a href="/productos" class="btn btn-secondary">
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>