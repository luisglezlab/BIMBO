<div class="container p-4">
    <div class="row">
            {{#if carritos}}
            <div class="col-md-4 mb-3">
                <div class="card text-center">
                    <div class="card-header bg-info text-light">
                        <h5>Cuenta Global</h5>
                    </div>
                    <div class="card-body">
                        {{#each total}}
                            <h3 class="border p-3 rounded">Total a pagar: <small class="text-muted mr-1">$</small>{{total}}<small class="text-muted ml-1">MXN</small></h3>
                        {{/each}}
                        <table class="table table-sm">
                            <tbody>
                                {{#each carritos}}
                                    <tr>
                                        <td class="text-left">{{nombre_producto_carrito}}</td>
                                        <td class="text-left"><small class="text-muted mr-1">x </small>{{cantidad_total}}</td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        <a href="/carrito/comprar" type="submit" class="btn btn-danger btn-block">Realizar compra</a>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
            {{> message}}
                            
                <div class="card">
                <div class="card-header bg-info">
                    <h5 class="card-title font-weight-bold text-light m-0">
                        Carrito de compras
                    </h5>
                </div>
                <div class="card-body p-0 overflow-auto" style="max-height: 400px;">
                     <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="align-middle" scope="col">Producto</th>
                                <th class="text-center align-middle" scope="col">costo por unidad</th>
                                <th class="text-center align-middle" scope="col">cantidad</th>
                                <th class="text-center align-middle" scope="col">costo total por producto</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each carritos}}
                                    <tr>
                                        <td class="py-3 align-middle">{{nombre_producto_carrito}}</td>
                                        <td class="py-3 text-center align-middle"><small class="text-muted mr-1">$</small>{{costo}}<small class="text-muted ml-1">MXN</small></td>
                                        <td class="py-3 text-center align-middle"><small class="text-muted mr-1">x </small>{{cantidad_total}}</td>
                                        <td class="py-3 text-center align-middle"><small class="text-muted mr-1">$</small>{{parcial}}<small class="text-muted ml-1">MXN</small></td>                                        
                                        <td class="py-3 text-center align-middle"><a href="/carrito/delete/{{id_producto_carrito}}" class="btn btn-info btn-block">Eliminar</a></td>
                                    </tr>    
                            {{/each}}

                        </tbody>
                    </table>
                </div>
                </div>
            </div>


            
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay productos en tu carrito</p>
                    <a href="/inicio">Agrega productos a tu carrito</a>
                </div>
            </div>
            {{/if}}
    </div>
</div>